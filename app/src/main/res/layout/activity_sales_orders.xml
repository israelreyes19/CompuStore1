<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fiuady.android.compustore.SalesOrdersActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/appbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:layout_weight="0.81">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:id="@+id/imageButtonBackOrderSales"
                android:src="@drawable/arrow"
                android:layout_gravity="start"
                android:background="#00000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16pt"
                android:text="Ordenes por mes"
                android:textSize="5mm"
                android:id="@+id/textview_ventas"
                android:textStyle="bold" />



        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/order_sales_recyvlerview">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>
